from tkinter import *

# field = Range(root, label, range1, range2)


class Range:
    def __init__(self, root, label, row=0, column=0):

        # init
        self.root = root
        self.label = label
        self.row = row
        self.column = column

        # create label
        self.label = Label(self.root, text=self.label)
        self.label.grid(row=row, column=column)

        # create entries
        self.entries = []
        for i in range(2):
            entry_container = Frame(self.root)
            entry = Entry(entry_container)
            entry.pack()
            entry_container.grid(row=row, column=column+i+1)
            self.entries.append(entry)

    # returns tuple wth the entries
    def get(self):
        print(self.entries)
        return_entries = []
        for entry in self.entries:
            print(entry.get())
            return_entries.append(entry.get())

        return tuple(return_entries)

    # sets entry at index to value
    def set(self, index, value):
        self.entries[index].delete(0, END)
        self.entries[index].insert(0, value)

    def validate(self):
        for entry in self.entries:
            entry.children[0].config(background="white")
            pattern = re.compile('[0-9,.]')
            if not re.match(pattern, entry.get()):
                entry.config(background="red")


root = Tk()

input_area = Frame()

range_input = Range(input_area, "label")


def update():
    print(range_input.get())
    range_input.validate()



input_area.pack()

button = Button(root, text="update", command=update)
button.pack()

root.mainloop()